<h3>Chi tiết Deal</h3>

<RadzenTabs Change=@OnChange TabPosition="@TabPosition.Top" RenderMode="TabRenderMode.Client">
    <Tabs>
        <RadzenTabsItem Text="Deals">
            <div class="form-group">
                <div class="row">
                    <div class="col-1 border text-center pt-2 pb-2 rounded-pill">Mở hợp đồng</div>
                    <div class="col-1 align-center text-center"><i class="fa fa-arrow-right" aria-hidden="true" style="font-size:2.25rem"></i></div>
                    <div class="col-2 border text-center pt-2 pb-2 rounded-pill">Lấy yêu cầu</div>
                    <div class="col-1 align-center text-center"><i class="fa fa-arrow-right" aria-hidden="true" style="font-size:2.25rem"></i></div>
                    <div class="col-1 border text-center pt-2 pb-2 rounded-pill">Báo giá</div>
                    <div class="col-1 align-center text-center"><i class="fa fa-arrow-right" aria-hidden="true" style="font-size:2.25rem"></i></div>
                    <div class="col-1 border text-center pt-2 pb-2 rounded-pill bg-primary text-light">Tư vấn</div>
                    <div class="col-1 align-center text-center"><i class="fa fa-arrow-right" aria-hidden="true" style="font-size:2.25rem"></i></div>
                    <div class="col-2 border text-center pt-2 pb-2 rounded-pill">Đóng hợp đồng</div>
                </div>
                <div class="form-group pt-3 row">
                        <label for="Name">Tên Deal</label>
                        <input class="form-control" placeholder="Tên Deal hiển thị" disabled />
                </div>
                <div class="form-group pt-3">
                    <label for="Name">Nội dung yêu cầu</label>
                    <textarea class="form-control" placeholder="Nội dung yêu cầu của Deal" disabled />
                </div>
                <div class="form-group pt-3 row">
                        <label for="Date">Thời gian cần</label>
                        <input class="form-control" type="date" @bind="@Date" disabled />
                </div>
                <div class="form-group pt-3 row">
                        <label for="Price">Khả năng ngân sách</label>
                        <input class="form-control" type="number" disabled />
                </div>
                <div class="form-group">
                    <div class="mb-2">
                        <label>Báo giá</label>
                        <button class="float-right btn btn-primary">Thêm báo giá</button>
                    </div>
                    <div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Tên Sản phẩm / tính năng</th>
                                    <th>Đơn giá</th>
                                    <th>Thuế</th>
                                    <th>Tổng</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </RadzenTabsItem>
        <RadzenTabsItem Text="Hoạt động">
            <div class="form-group">
                <div class="mb-2">
                    <label>Danh sách hoạt động</label>
                    <button class="float-right btn btn-primary">Thêm hoạt động</button>
                </div>
                <div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tên hoạt động</th>
                                <th>Kiểu</th>
                                <th>Thời gian</th>
                                <th>Chức năng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </RadzenTabsItem>
        @*<RadzenTabsItem Text="Lịch sử deal">
            Đây là nội dung lịch sử deal
        </RadzenTabsItem>*@
    </Tabs>
</RadzenTabs>
