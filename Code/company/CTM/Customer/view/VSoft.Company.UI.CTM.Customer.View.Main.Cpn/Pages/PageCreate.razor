<h3>Create Customer</h3>

<div class="form-group">
    <div class="form-group pt-3">
        <label for="Name">Họ Tên</label>
        <input class="form-control" placeholder="Nhập tên Customer...." @bind-value="@Name"></input>
    </div>
    <div class="form-group pt-3">
        <label for="Name">Phone</label>
        <textarea class="form-control pt-1" rows="5" placeholder="Nhập mô tả Customer...."
            @bind="@Description"></textarea>
    </div>
    <div class="form-group float-end pt-3">
        <button type="button" @onclick="@OnSubmit" class="btn btn-primary pt-1">Tạo mới</button>
    </div>
</div>


