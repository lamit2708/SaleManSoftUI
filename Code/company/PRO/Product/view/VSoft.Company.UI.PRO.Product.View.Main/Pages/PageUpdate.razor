<h3>Update Product</h3>

<EditForm Model="Product" OnValidSubmit="SubmitTask">
    <div class="form-group pt-3">
        <label for="Name">Tên Product</label>
        <InputText class="form-control" placeholder="Nhập tên Product...." @bind-Value="Product.Name"></InputText>
    </div>
    <div class="form-group pt-3">
        <label for="Name">Mô tả Product</label>
        <InputTextArea class="form-control pt-1" rows="5" placeholder="Nhập mô tả Product...." @bind-Value="Product.Description"></InputTextArea>
    </div>
    <div class="form-group float-end pt-3">
        <button type="submit" class="btn btn-primary pt-1">Cập nhật</button>
    </div>
</EditForm>
