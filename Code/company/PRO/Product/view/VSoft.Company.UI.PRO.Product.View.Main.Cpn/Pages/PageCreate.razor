@using VSoft.Company.UI.PRC.ProductCategory.View.Share.Components
<h3>Create Product</h3>

<div class="form-group">
    <div class="form-group pt-3">
        <label for="Name">Tên Product</label>
        <input class="form-control" placeholder="Nhập Tên Sản Phẩm...." @bind-value="@Name"></input>
    </div>
    <div class="form-group pt-3">
        <label for="Name">Mô tả Product</label>
        <textarea class="form-control pt-1" rows="5" placeholder="Nhập Mô Tả Sản Phẩm...." @bind="@Description"></textarea>
    </div>
    <div class="form-group pt-3">
        <label for="Name">Giá</label>
        <textarea class="form-control pt-1" rows="5" placeholder="Nhập Giá...." @bind="@Price"></textarea>
    </div>
    <div class="form-group pt-3">
        <label for="Name">Số Lượng</label>
        <textarea class="form-control pt-1" rows="5" placeholder="Nhập Số Lượng...." @bind="@Quantity"></textarea>
    </div>
    <div class="form-group pt-3">
        <label for="Name">Danh mục</label>
        <SelectProductCategorysComponent @bind-SelectedId="@CategoryId"/>
    </div>
    <div class="form-group float-end pt-3">
        <button type="button" @onclick="@OnSubmit" class="btn btn-primary pt-1">Tạo mới</button>
    </div>
</div>


