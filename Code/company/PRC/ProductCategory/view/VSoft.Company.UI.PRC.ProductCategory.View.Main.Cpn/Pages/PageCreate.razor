<h3>Create ProductCategory</h3>

<div class="form-group">
    <div class="form-group pt-3">
        <label for="Name">Tên danh mục sản phẩm</label>
        <input class="form-control" placeholder="Nhập tên danh mục sản phẩm...." @bind-value="@Name"></input>
    </div>
    <div class="form-group pt-3">
        <label for="Name">Mô tả danh mục</label>
        <textarea class="form-control pt-1" rows="5" placeholder="Nhập mô tả danh mục...." @bind="@Description"></textarea>
    </div>
    <div class="form-group float-end pt-3">
        <button type="button" @onclick="@OnSubmit" class="btn btn-primary pt-1">Tạo mới</button>
    </div>
</div>


