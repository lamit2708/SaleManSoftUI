<h3>Update User</h3>

<div class="form-group">
    <div class="form-group pt-3">
        <label for="Name">Tên User</label>
        <input class="form-control" placeholder="Nhập tên User...." @bind-value="@User.Name"></input>
    </div>
    <div class="form-group pt-3">
        <label for="Name">Mô tả User</label>
        <textarea class="form-control pt-1" rows="5" placeholder="Nhập mô tả User...." @bind="@User.Description"></textarea>
    </div>
    <div class="form-group float-end pt-3">
        <button type="button" @onclick="@OnSubmit" class="btn btn-primary pt-1">Cập nhật</button>
    </div>
</div>
